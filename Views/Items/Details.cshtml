@model DMSOShopping.Models.Item

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name_FL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name_FL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name_SL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name_SL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsNew)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsNew)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsFreeShipping)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsFreeShipping)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SellerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SellerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UOM)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UOM.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
    </dl>
</div>
@if (!string.IsNullOrEmpty(ViewBag.Error))
{<div class="alert alert-danger alert-dismissible fade show text-center mb-30"><span class="alert-close" data-dismiss="alert"></span><i class="fe-icon-award"></i>&nbsp;&nbsp;<strong>@ViewBag.Error</strong> </div>}

<div>

    <div class="d-flex justify-content-center">
        <form asp-action="AddToCart" asp-controller="Cart">
            <input name="id" value="@Model.Id" type="hidden" class="form-control" />
            <div class="input-group mb-3">
                <input name="quantity" type="number" value="1" min="1" max="10" class="form-control col-6" style="text-align:center" />
                <div class="input-group-append">
                    <input type="submit" value="Add To Cart" class="btn btn-primary" />
                </div>
            </div>

        </form>
    </div>


    <a asp-controller="Items" asp-action="Index">All Items</a>
</div>
